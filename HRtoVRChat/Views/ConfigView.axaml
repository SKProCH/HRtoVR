<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HRtoVRChat.ViewModels"
             xmlns:pgc="clr-namespace:Avalonia.PropertyGrid.Controls;assembly=Avalonia.PropertyGrid"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HRtoVRChat.Views.ConfigView"
             x:DataType="vm:ConfigViewModel">
  <Grid RowDefinitions="*">
    <ScrollViewer Grid.Row="0">
      <StackPanel>
        <TextBlock Text="Global Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />
        <pgc:PropertyGrid DataContext="{Binding AppOptions}"
                          IsHeaderVisible="False"
                          IsQuickFilterVisible="False"
                          IsCategoryVisible="False"
                          IsTitleVisible="False" />
        <pgc:PropertyGrid DataContext="{Binding ParameterNamesOptions}"
                          IsHeaderVisible="False"
                          IsQuickFilterVisible="False"
                          IsCategoryVisible="False"
                          IsTitleVisible="False" />
      </StackPanel>
    </ScrollViewer>
  </Grid>
</UserControl>